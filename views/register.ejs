<%- include('./partials/header.ejs') %>
  <% if (message.length) { %> <%= message %> <% } %>

<div class="login-page">
  <div class="form">
    
    <form class="login-form sprint" action="/register" method="POST">
      <h1 id="RegisterText1">New</h1>
      <h1 id="RegisterText2">Account</h1>
      <input for="name" type="text" id="name" name="name" placeholder="Name" required/>
      <input for="email" type="text" placeholder="Email" required/>
      <input for="password" type="password" id="password" name="password" placeholder="Password"required/>
      <button id="SignIn" type="submit">Register</button>
      <h2>Already have an account?</h2>
      <p class="message"><a href="/login">Login</p>
    </form>
  </div>